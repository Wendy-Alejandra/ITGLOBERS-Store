{
  "header-row#header__top__menu--desktop": {
    "title": "Header top menu for desktop devices",
    "props": {
      "blockClass": "header__top__menu"
    },
    "children": [
      "flex-layout.row#header__section__1--desktop",
      "flex-layout.row#header__section__2--desktop"
    ]
  },
  "flex-layout.row#header__section__1--desktop": {
    "props": {
      "horizontalAlign": "left",
      "verticalAlign": "center",
      "preventHorizontalStretch": true,
      "preventVerticalStretch": true,
      "fullWidth": true
    },
    "children": [
      "flex-layout.col#header__drawer--desktop",
      "flex-layout.col#header__logo--desktop",
      "flex-layout.col#header__searchBar--desktop"
    ]
  },
  "flex-layout.col#header__drawer--desktop": {
    "title": "Header hamburguer drawer menu",
    "props": {
      "blockClass": "col__header__drawer--desktop"
    },
    "children": ["drawer"] /*Automatically adds a hamburguer icon menu*/
  },
  "flex-layout.col#header__logo--desktop": {
    "props": {
      "verticalAlign": "middle",
      "blockClass": "col__header__logo--desktop"
    },
    "children": [
      "logo"
    ]
  },
  "logo": {
    "props": {
      "title": "ITG Logo",
      "href": "/",
      "url": "/arquivos/icon_Black.png",
      "width": "32",
      "blockClass": "logo__itg--desktop"
    }
  },
  "flex-layout.col#header__searchBar--desktop": {
    "title": "Header column search-bar desktop",
    "props": {
      "placeholder": "Search products...",
      "blockClass": "col__header__searchBar-desktop"
    },
    "children":["search-bar"] /*Automatically adds a search bar*/
  },
  "search-bar": {
    "title": "Header search-bar desktop",
    "props": {
      "placeholder": "Search products...",
      "font": "mini",
      "blockClass": "header__searchBar-desktop"
    }
  },
  "flex-layout.row#header__section__2--desktop": {
    "children": [
      "minicart.v2",
      "login"      
    ]
  },
  "login": {
    "title": "Login header button",
    "props": {
      "emailAndPasswordTitle": "LOG-IN",
      "accessCodeTitle": "Acess Code LOG-IN",
      "emailPlaceholder": "e-mail",
      "passwordPlaceholder": "password",
      "showPasswordVerificationIntoTooltip": true,
      "iconLabel": "Login",
      "blockClass": "header__login"
    }
  }
}